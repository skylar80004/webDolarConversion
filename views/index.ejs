      <script>
          function dolarToColon(){

              var dolar = document.getElementById("inputDolar").value;
              var dolarInt = parseInt(dolar);
              dolarInt*= 590;
              var result = dolarInt.toString() + "â‚¡";
              document.getElementById("inputColon").value = result;

          }

          function colonToDolar(){

              var colon = document.getElementById("inputColon").value;
              var colonInt = parseFloat(colon);
              colonInt /= 590;
              var result = colonInt.toString() + "$";
              document.getElementById("inputDolar").value = result;
          }
      </script>

